- model_class = HeaderBackground

.page-header
  h1
    = t(".title")

= form_tag :action => "activation", :controller => "header_backgrounds"
  table.table.table-striped
    tr
      th= model_class.human_attribute_name(:title)
      th= model_class.human_attribute_name(:activation)
      th= t '.actions', :default => t("helpers.actions")
    - @header_backgrounds.each do |header_background|
        tr
          td
            = header_background.title
          td
            = radio_button "header_backgrounds[activation]", "", header_background.id, checked: header_background.activation
          td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_header_background_path(header_background.uuid), class: 'btn btn-mini btn-primary'
            '
            = link_to "Show", admin_header_background_path(header_background.uuid), class: "btn btn-mini btn-success"
            '
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_header_background_path(header_background.uuid), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("admin.common.confirm_delete"))) }, :class => 'btn btn-mini btn-danger'

  .row
    .col-md-10
      = link_to t(".new", :default => t("helpers.links.new")), new_admin_header_background_path, class: 'btn btn-primary'
    .col-md-2
      = submit_tag t("admin.common.valid"), name: "activation_header_background_activate", class: "btn btn-success"
