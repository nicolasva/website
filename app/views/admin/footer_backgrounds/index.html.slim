- model_class = FooterBackground

.page-header
  h1
    = t(".title")

= form_tag :action => "activation", :controller => "footer_backgrounds"
  table.table.table-striped
    tr
      th= model_class.human_attribute_name(:title)
      th= model_class.human_attribute_name(:activation)
      th= t '.actions', :default => t("helpers.actions")
    - @footer_backgrounds.each do |footer_background|
      = content_tag_for :tr, footer_background do
        td
          = footer_background.title 
        td
          = radio_button "footer_backgrounds[activation]", "", footer_background.id, checked: footer_background.activation
        td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_footer_background_path(footer_background.uuid), class: 'btn btn-mini btn-primary'
          '
          = link_to "Show", admin_footer_background_path(footer_background.uuid), class: "btn btn-mini btn-success"
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_footer_background_path(footer_background.uuid), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("admin.common.confirm_delete"))) }, :class => 'btn btn-mini btn-danger'

  .row
    .col-md-10
      = link_to t(".new", :default => t("helpers.links.new")), new_admin_footer_background_path, class: 'btn btn-primary'
    .col-md-2
      = submit_tag t("admin.common.valid"), name: "activation_footer_background_activate", class: "btn btn-success"
