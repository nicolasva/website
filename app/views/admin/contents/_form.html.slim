= simple_form_for [:admin, @category, @content], url: url  do |f|
  = f.input :description, :as => :ckeditor
  = f.input :english_description, :as => :ckeditor
  = render(:partial => "/admin/backgrounds/background", :locals => { f: f, model_init: @content.new_record? ? Background.new : @content.background, model: @content })
  .form-actions
    = f.button :submit, :class => 'btn-primary'
