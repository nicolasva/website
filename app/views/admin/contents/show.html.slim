- model_class = Content

.page-header
  .row
    .col-md-2
      h1= t '.title', default: model_class.model_name.human.titleize
    .col-md-10
      .pull-right
        .btn-toolbar
          = render(:partial => "/admin/common_panel/panel")
          .btn-group
            = link_to "Editer ce contenu", edit_admin_title_content_path(@content.category.title, @content.uuid), class: "btn btn-default"

.row
  dl.dl-horizontal 
    dt= model_class.human_attribute_name(:category_id) + ":"
    dd= look_category
  .col-md-12.content_description
    = @content.description.html_safe
